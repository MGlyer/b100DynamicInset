{
  "name": "dice",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "start": "npm run clean:local && http-server -p 3000 & npm run watch",
    "watch": "npm run watch:inset & npm run watch:app",
    "watch:inset": "node index.js --watch",
    "watch:app": "webpack --watch --progress --colors",
    "build:production": "npm run build:inset:production && npm run build:app:production && npm run build:fallback:production",
    "build:inset:production": "node index.js --buildInset --production",
    "build:app:production": "NODE_ENV=production webpack -p",
    "build:fallback:production": "node index.js --buildFallback --production",
    "build:article": "gulp buildArticle",
    "deploy": "npm run clean:remote && npm run build:production && node index.js --deploy",
    "clean:local": "rm -rf dist/local/ && mkdir -p dist/local",
    "clean:remote": "rm -rf dist/remote/ && mkdir -p dist/remote"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^2.0.4",
    "colors": "^1.1.2",
    "dsv-loader": "^2.0.0",
    "handlebars": "^4.0.12",
    "html-minifier": "^3.5.8",
    "node-json-minify": "^1.0.0",
    "prettyjson": "^1.2.1",
    "superagent": "^3.8.2",
    "wsjgraphics-css": "git+https://github.dowjones.net/bentleye/wsjgraphics.css.git",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^0.28.8",
    "extract-text-webpack-plugin": "^3.0.2",
    "gulp": "^4.0.0",
    "gulp-file-include": "^2.0.1",
    "http-server": "^0.11.1",
    "image-size": "^0.6.3",
    "node-sass": "^4.9.2",
    "postcss-loader": "^2.0.10",
    "puppeteer": "^1.7.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-shell-plugin": "^0.5.0"
  }
}
